<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorBackground">@color/grey</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:alertDialogTheme">@style/ThemeDialogCustom</item>


    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/recycler_first_dark</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="android:textSize">40sp</item>

    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/recycler_first_dark</item>
    </style>

        <style name="ThemeDialogCustom">
            <item name="android:windowIsFloating">true</item>
            <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
            <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
            <item name="android:textColor">@color/material_green_700</item>
            <item name="android:editTextColor">@color/material_green_700</item>

        </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:colorAccent">@color/primary_text</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="colorPrimaryDark">#22397F</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:hint">@string/dialog_hint</item>
       <item name="android:editTextColor">@color/primary_text</item>
        <item name="android:backgroundTint">@color/primary_text</item>

    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/recycler_first_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
